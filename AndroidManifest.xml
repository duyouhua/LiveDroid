<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.victorvieux.livedroid"
    android:versionCode="90"
    android:versionName="0.9" >

    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="15"/>
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
     <uses-permission android:name="android.permission.SET_WALLPAPER" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/CustomTheme"
        android:hardwareAccelerated="true" >
        <activity
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar"
            android:name="com.victorvieux.livedroid.activities.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/List" android:name="com.victorvieux.livedroid.activities.ListActivity"></activity>
        <activity android:label="@string/wall" android:name="com.victorvieux.livedroid.activities.WallActivity"></activity>
        <activity android:label="@string/game" android:name="com.victorvieux.livedroid.activities.GameActivity"></activity>
        <activity android:label="@string/Avatar" android:name="com.victorvieux.livedroid.activities.AvatarActivity"></activity>
        <activity android:label="@string/Trophies" android:name="com.victorvieux.livedroid.activities.TrophiesActivity"></activity>
        <activity android:label="@string/settings" android:name=".activities.SettingsActivity" android:theme="@style/CustomThemeNoBg"></activity>
        
        </application>

</manifest>