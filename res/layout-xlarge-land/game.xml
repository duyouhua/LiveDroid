<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/block" android:layout_margin="10dp" android:layout_gravity="center">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:layout_below="@+id/x360a_ref"
        android:numColumns="3" android:horizontalSpacing="5dp" android:verticalSpacing="5dp">
    </GridView>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:indeterminate="true" android:indeterminateDrawable="@anim/progress"/>

        <include
        android:id="@+id/x360a_ref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/x360a"/>
         <include
        android:id="@+id/relativeLayoutBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        layout="@layout/relativelayoutbox" 
        android:visibility="gone"/>
</RelativeLayout>